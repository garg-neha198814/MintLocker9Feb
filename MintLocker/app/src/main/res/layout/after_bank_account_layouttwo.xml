<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">


   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_marginLeft="@dimen/margin_large"
       android:layout_marginRight="@dimen/margin_large"
       android:layout_height="wrap_content">


       <TextView
           android:layout_width="match_parent"
           android:textColor="@android:color/white"
           android:layout_weight="01"
           android:textAllCaps="true"
           android:padding="@dimen/padding_small"
           android:textSize="@dimen/text_size_extra_large"
           android:text="@string/after_bank_account_period_since"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_weight="01"
           android:textAlignment="gravity"
           android:gravity="right"
           android:textColor="@android:color/white"
           android:textSize="@dimen/text_size_extra_large"
           android:text="Oct 2015"
           android:layout_height="wrap_content" />


   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            android:textAllCaps="true"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_size_extra_large"
            android:text="@string/after_bank_account_amount_invested"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="01"
            android:textAlignment="gravity"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_extra_large"
            android:text="$"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            android:textAllCaps="true"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_size_extra_large"
            android:text="@string/after_bank_account_amount_earned"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="01"
            android:textAlignment="gravity"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_extra_large"
            android:text="$"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            android:textAllCaps="true"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_size_extra_large"
            android:text="@string/after_bank_account_earnings_in_percent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="01"
            android:textAlignment="gravity"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_extra_large"
            android:text="%"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_weight="0.4"
            android:padding="@dimen/padding_small"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_extra_large"
            android:text="@string/after_bank_account_time_weighted"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="01"
            android:textAlignment="gravity"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_extra_large"
            android:text="%"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>
