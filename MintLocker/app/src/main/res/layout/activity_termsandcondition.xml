<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="01"
            android:gravity="center"
            android:orientation="vertical">

            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/tandc_title"
                android:text="@string/tandc_title"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_extra_extra_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <WebView
                android:id="@id/tandc_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="01"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@id/tandc_close"
                android:layout_width="match_parent"
android:background="@drawable/rounded_corner_blue_button"
                android:layout_height="match_parent"

                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:text="@string/tandc_button"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_extra_large" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
