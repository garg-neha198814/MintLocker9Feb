                          android:orientation="vertical">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:layout_weight="01"
                              android:padding="@dimen/padding_small"
                              android:text="@string/suggest_corporate_bond"
