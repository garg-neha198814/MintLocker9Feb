<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="horizontal">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:orientation="vertical">

                <TextView
                    android:id="@id/suggest_riskType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:text="Moderate Risk"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_extra_large" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:padding="@dimen/padding_small"
                    android:text="@string/textLowRisk"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_extra_large"
            android:layout_marginRight="@dimen/margin_extra_large"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="01"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:padding="@dimen/padding_small"
                    android:text="@string/suggest_small_co_stocks"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@id/suggest_seekbar_one"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/view_yellow_rounded"

                        android:orientation="horizontal" />

                    <TextView
                        android:id="@id/suggest_tv_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:text="19%" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="01"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:padding="@dimen/padding_small"
                    android:text="@string/suggest_large_co_stocks"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:id="@id/suggest_seekbar_two"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/view_orange_rounded"

                        android:orientation="horizontal" />

                    <TextView
                        android:id="@id/suggest_tv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:text="16%" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="01"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:padding="@dimen/padding_small"
                    android:text="@string/suggest_emerging_market_stocks"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:id="@id/suggest_seekbar_three"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/view_red_rounded"

                        android:orientation="horizontal" />

                    <TextView
                        android:id="@id/suggest_tv_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:text="10%" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="01"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:padding="@dimen/padding_small"
                    android:text="@string/suggest_government_bond"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:id="@id/suggest_seekbar_four"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/view_red_rounded"

                        android:orientation="horizontal" />

                    <TextView
                        android:id="@id/suggest_tv_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:text="6%" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="01"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:padding="@dimen/padding_small"
                    android:text="@string/suggest_real_estate_stocks"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:id="@id/suggest_seekbar_five"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/view_green_rounded"

                        android:orientation="horizontal" />

                    <TextView
                        android:id="@id/suggest_tv_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:text="16%" />
                </LinearLayout>


            </LinearLayout>

