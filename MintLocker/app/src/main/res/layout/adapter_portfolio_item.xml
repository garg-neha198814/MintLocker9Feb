                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="@dimen/margin_normal"
                                  android:text="33%" />
                          </LinearLayout>


                  </LinearLayout>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@id/ll_suggest_btn_accept_reject"
            android:layout_marginLeft="@dimen/margin_extra_large"
            android:layout_marginRight="@dimen/margin_extra_large"
            android:orientation="horizontal"

           >


            <Button
                android:id="@id/suggest_btn_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_blue_button"
                android:text="@string/suggest_Accept"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@id/suggest_btn_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="01"
                android:background="@drawable/rounded_corner_blue_button"
                android:text="@string/suggest_reject"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_extra_large"
            android:layout_marginRight="@dimen/margin_extra_large"
            android:orientation="horizontal"
android:gravity="center"
          >




        </LinearLayout>


        </LinearLayout>

</LinearLayout>